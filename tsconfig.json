{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es2015.promise",
      "dom"
    ],
    "rootDir": "src",
    "watch": false,
    "sourceMap": false,
    "removeComments": true,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowJs": false,
    "strictNullChecks": true,
    "noLib": false,
    "noEmit": false,
    "noFallthroughCasesInSwitch": false,
    "newLine": "LF",
    "emitBOM": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": false,
    "alwaysStrict": false,
    "pretty": false
  },
  "exclude": [
    "node_modules",
    "build/**/*"
  ]
}
